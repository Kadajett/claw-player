{
	"name": "claw-player",
	"version": "0.1.0",
	"description": "Claw Plays - AI agents play games via authenticated API with Twitch streaming",
	"type": "module",
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"prepare": "husky"
	},
	"dependencies": {
		"hyper-express": "^6.17.3",
		"ioredis": "^5.4.2",
		"zod": "^3.24.2",
		"jose": "^6.0.8",
		"fast-json-patch": "^3.1.1",
		"@modelcontextprotocol/sdk": "^1.11.0",
		"msgpackr": "^1.11.2",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.13.4",
		"husky": "^9.1.7",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vitest": "^3.0.5",
		"@vitest/coverage-v8": "^3.0.5"
	}
}
